{
  "name": "bookeezy-api",
  "version": "0.0.0",
  "scripts": {
    "watch": "tsc -w",
    "start": "nodemon dist/index.js",
    "dev": "nodemon dist/index.js",
    "dev:ts": "nodemon --exec ts-node src/index.ts",
    "migration:create": "npx mikro-orm migration:create",
    "migration:list": "npx mikro-orm migration:list"
  },
  "description": "A book repository API, offers a way to save books to a central place with the help of community.",
  "main": "./src/index.js",
  "author": "Mannuel Ferreira <mannuel.ferreira@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.9.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/migrations": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "argon2": "^0.28.2",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.5.3",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
