{
  "name": "bookeezy-api",
  "version": "0.0.0",
  "scripts": {
    "dev:ts": "nodemon --exec ts-node --require dotenv/config ./src/index.ts",
    "dev": "nodemon --require dotenv/config ./dist/index.js",
    "lint:fix": "yarn prettier --write . && yarn lint --fix",
    "lint": "yarn eslint --ext .js,.jsx,.ts,.tsx .",
    "migration:initial": "npx mikro-orm migration:create --initial",
    "migration:create": "npx mikro-orm migration:create",
    "migration:down": "npx mikro-orm migration:down",
    "migration:list": "npx mikro-orm migration:list",
    "migration:pending": "npx mikro-orm migration:pending",
    "migration:up": "npx mikro-orm migration:up",
    "start": "nodemon --require dotenv/config ./dist/index.js",
    "watch": "tsc -w",
    "generate:types": "graphql-codegen --config codegen.yml"
  },
  "description": "A book repository API, offers a way to save books to a central place with the help of community.",
  "main": "./src/index.js",
  "author": "Mannuel Ferreira <mannuel.ferreira@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.2.2",
    "@graphql-codegen/typescript-operations": "^2.1.6",
    "@graphql-codegen/typescript-resolvers": "2.2.1",
    "@graphql-codegen/typescript-type-graphql": "^2.1.4",
    "@types/connect-redis": "^0.0.17",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.1",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "snyk": "^1.723.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/migrations": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@mikro-orm/reflection": "^4.5.9",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "apollo-server-core": "^3.10.1",
    "apollo-server-express": "^3.3.0",
    "argon2": "^0.28.2",
    "class-validator": "^0.13.1",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "graphql": "^15.6.0",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/config/mikro-orm.ts",
      "./dist/config/mikro-orm.js"
    ]
  }
}
